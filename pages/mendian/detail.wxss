.pic-scroll{
  height: 240rpx;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 75rpx;
  font-size: 32rpx;
  white-space: nowrap;
  z-index: 99;
  background-color: #f4f4f4;
}
.img-box{
  width: 270rpx;
  height:220rpx;
  margin:10rpx;
  display: inline-block;
}
.area1{
  height: 120rpx;
  padding: 30rpx;
  border-bottom: 1rpx solid #ddd;
}
.mendian-name{
  font-size: 40rpx;
  font-weight: bold;
  line-height: 80rpx;
  height: 80rpx;
}
.mendian-worktime{
  color: #9f9f9f;
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
}
.mendian-location{
  font-size: 30rpx;
  line-height: 60rpx;
  height: 60rpx;
  color: #bbb;
  margin-left: 30rpx;
}
.page-section-gap{
  box-sizing: border-box;
}
.daohang{
  float:right;
  margin-right: 20rpx;
  background-color: #4bf;
  color: #fff;
  width: 80rpx;
  text-align: center;
  border-radius: 10rpx;
}
.area2{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  color: #f5f5f5;
}
.area2-item{
  width: 335rpx;
  display: inline-block;
  color: #444;
  text-align: center;
}
.area3{
  border-top: 20rpx solid #f4f4f4;
  border-bottom: 20rpx solid #f4f4f4; 
}
.area3-1{
  padding-left:30rpx; 
  font-size: 38rpx;
  color: #444;
  border-bottom: 1rpx solid #f4f4f4;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: bold;
}
.area3-2{
  padding-left:30rpx; 
  font-size: 28rpx;
  color: #999;
  height: 60rpx;
  line-height: 60rpx;
}
.area4{
  padding:0 30rpx;
  border-bottom: 30rpx solid #f4f4f4;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #666
}
.area4-right{
  float: right;
}
