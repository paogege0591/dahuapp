<view class='pro-area'>
  <view class='pro-item' wx:for="{{list}}" wx:key="index">
    <navigator url="/pages/miaosha/details?ms_id={{item.ms_id}}&pro_id={{item.id}}">
    <view class='pro-img'><image class='full-pic' src='{{item.img}}'></image></view>
    <view class='pro-name'>{{item.goods_name}}　{{item.spec_key_name}}</view>
    <view class='pro-bottom'>
      <view class='pro-bottom-left'>￥{{item.price}}</view>
      <view class='pro-bottom-right'>
        <icon class='iconfont icon-gouwuche'></icon>
      </view>
    </view>
    </navigator>
  </view>
</view>