}
.pro-price1{
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 40rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
}
.pro-price2{
  color: #f55;
  width: 150rpx;
}
.pro-price3{
  width: 150rpx;
}
.pro-num{
  font-size: 20rpx;
