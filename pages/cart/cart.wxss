}
.edit{
  float: right;
  margin-right: 20rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
}
.cart-area{
  background-color: #fff;
}
.pro-item{
  /* padding: 20rpx; */
  /* height:180rpx; */
  height:175rpx;
  display: flex;
  flex-direction: row;
}
.checkradio{
  height: 160rpx;
  line-height: 160rpx;
  width: 80rpx;
}
.pro-img{
  width: 160rpx;
