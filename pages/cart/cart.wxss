}
.money{
  color: #f55;
  display: inline;
}
.footyunfei{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #999;
  text-align: right;
}
.footbuy{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f55;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  width: 150rpx;
  margin-left: 20rpx;
}
.is_failure{
  font-size: 25rpx;
}
.delbtn{
  font-size: 26rpx;
