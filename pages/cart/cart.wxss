}
.foot-area{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
}
.allradio{
  width: 80rpx;
  line-height: 80rpx;
