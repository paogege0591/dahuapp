/* pages/commentinfo/commentinfo.wxss */
page{
  background-color: #f7f7f7;
  font-size: 30rpx;
  padding: 20rpx 0;
}
.article-title,.article-content,.article-img{
  margin: 0 20rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1rpx solid #f7f7f7;
}
.article-img{
  height: 180rpx;
}
.article-left{
  font-weight: bold;
  min-height: 160rpx;
  line-height: 160rpx;
  width: 160rpx;
  border-right: 1rpx solid #f7f7f7;
}
.article-left-in{
  width: 160rpx;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
}

.article-input-title{
  height: 60rpx;
  line-height: 60rpx;
  margin: 50rpx 20rpx;
  width: 510rpx;
  padding-left: 30rpx;
}
.pj-xing{
  font-size: 36rpx;
  margin: 0 10rpx;
}
.article-text{
  margin: 20rpx;
  width: 510rpx;
}
.add-img{
  width: 160rpx;
  height: 160rpx;
  background-color: #f7f7f7;
  color: #777;
  margin: 10rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 60rpx;
}

.sub-article{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #69f;
  color: #fff;
  border-radius: 50rpx;
  margin: 50rpx auto;
  text-align: center;
}