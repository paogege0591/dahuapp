.addr-picker{
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 999;
}
.foot-add{
  position: fixed;
  height: 80rpx;
  line-height: 80rpx;
  top: auto;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f55;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  z-index: 999;
}
.addr-box{
  padding: 10rpx 0;
  font-size: 28rpx;
  margin-bottom: 80rpx;
}
.addr-item{
  margin: 20rpx 0;
  padding:0 30rpx;
  background-color: #fff;
  border-bottom: 20rpx solid #999;
}
.line1{
  height: 60rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.addr-name{
  height: 40rpx;
  line-height: 40rpx;
}
.addr-addr{
  height: 20rpx;
  line-height: 20rpx;
  font-size: 26rpx;
  color: #999;
}
.line2{
  height: 40rpx;
  line-height: 40rpx;
  width: 150rpx;
  border-radius: 40rpx;
  background-color: #f55;
  color: #fff;
  text-align: center;
  float: right;
}