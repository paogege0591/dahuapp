  font-weight: bold;
}
.article-area{
  margin-top: 20rpx;
}
.article-item{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding:20rpx; 
  margin: 20rpx 0;       
}
.line1{
  display: flex;
  flex-direction: row;
  height: 100rpx;
}
.article-usericon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 80rpx;
}
.article-username{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.username-1{
  font-weight: bold;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
}
.username-2{
  font-size: 26rpx;
  color: #b9b9b9;
  line-height: 40rpx;
  height: 40rpx;
}
.line2{
  display: flex;
  flex-direction: column;
}
.article-content{
  font-size: 30rpx;
  line-height: 60rpx;
}
.article-img{
  height: 210rpx;
  display: flex;
  flex-direction: row;
}
.half-pic{
  width: 210rpx;
  margin: 15rpx;
  background-color: #f7f7f7;
}
.add-article{
  position: fixed;
  bottom: 80rpx;
  left: 325rpx;
  z-index: 999;
  background-color: #69f;
  color: #fff;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 100rpx;
  font-size: 120rpx;
  text-align: center;
}

