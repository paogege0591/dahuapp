}
.username{
  font-size: 26rpx;
  line-height: 40rpx;
  height: 40rpx;
}
.userlevel{
  margin-top: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
}
.qiandao{
  height: 160rpx;
  width: 160rpx;
}
.qdbtn{
  line-height: 50rpx;
  height: 50rpx;
  font-size: 30rpx;
  width: 100rpx;
  border-radius: 10rpx;
