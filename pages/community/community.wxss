  color: #fff;
  text-align: center;
  margin-top: 25rpx;
  margin-left: 30rpx;
}
.tianshu{
  color: #999;
  font-size: 22rpx;
  margin-top: 10rpx;
}
.tabarea{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  padding-left: 20rpx;
}
.tab-item{
  font-size: 32rpx;
  margin:0 10rpx;
  line-height: 60rpx;
  height: 60rpx;
}
.cur-tab{
  font-weight: bold;
  border-bottom: 5rpx solid #000;
}
.zhiding{
  padding:0 20rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
  background-color: #fff;
  display: flex;
